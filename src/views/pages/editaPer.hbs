<!-- Llama a un archivo js-->
<script src="/js/validacion.js"></script>
<div class="cont-g">
	<div class="cont-ed-per">
		<div class="titulo-ed-per">
			<p>Edicion de personal</p>
		</div>
		<!-- Se crea un formulario con la funcion de editar -->
		{{#each per}}
		<form class="form" action="/editar/{{idUser}}" method="post" onsubmit="return validars ();">

			<div class="pipipi">
				<label for="apellido"> Apellido(s)</label>
				<input type="text" value="{{apellido}}" id="apellido" name="apellido" pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*"
					minlength="3" maxlength="40" required>
			</div>

			<div class="pipipi">
				<label for="nombre"> Nombre(s)</label>
				<input type="text" value="{{nombre}}" id="nombre" name="nombre" pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*"
					minlength="3" maxlength="30" required>
			</div>


			<div class="pipipi">
				<label for="telefono" Número de teléfono> Número de teléfono </label>
				<input value="{{telefono}}" type="tel" id="tel" name="telefono" minlength="10" maxlength="10" required>
			</div>

			<div class="pipipi">
				<label for="email"> Email </label>
				<input value="{{email}}" type="email" id="email" name="email" minlength="0" maxlength="50" required>
			</div>

			<div class="pipipi">
				<label for="password"> Contraseña </label>
				<input placeholder="Si no se requiere cambiar la contraseña deje este campo vacio" type="password"
					id="password" name="password" placeholder="" minlength="8" maxlength="25">
			</div>

			<div class="pipipi">
				<label for="rol" class="form-label"> Rol </label>
				<select id="rol" name="rol" class="form-control text-bg-light" minlength="1" maxlength="1" required>
					<option>{{rol}}</option>
					{{/each}}
					{{#each rows}}
					<option value="{{id_tip_empleado}}">{{descripcion}}</option>
					{{/each}}
				</select requiered>
			</div>

			{{#if error}}
			<p style="color: black;">{{error}}</p>
			{{/if}}

			<div class="cont-btn-gc">
				<input type="submit" value="Guardar cambios" class="btn-g-c" id="btnCambPers">
			</div>

		</form>
	</div>
</div>