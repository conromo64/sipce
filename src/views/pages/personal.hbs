<style>
	.filtro {
		display: none;
	}
</style>
<script src="/js/filtro.js"></script>

<div class="cont-prin">
	<div class="contenedor-2">
		<div class="cont-pers-agreaga-buscador">
			<div class="titulo-btn-a">
				<h2 class="titulo-per-adm">Personal</h2>
				<div class="btn-agreg-per"><a href="/altaPersonal">Agregar + </a></div>
			</div>
			<!--Buscador-->
			<div class="barraBusqueda">
				<img src="images/lupa.png" class="iconoBusqueda">
				<input type="text" class="busBox" placeholder="Buscar Personal" id="buscador">
			</div>
		</div>

		<div class="container">
			<table>
				<thead>
					<tr class="encabesado">
						<th>ID Usaurio</th>
						<th>Nombre</th>
						<th>Editar</th>
						<th>Borrar</th>
					</tr>
				</thead>
				<tbody>
					{{#each per}}
					<tr id="articulos" class="info-per">
						<th>{{idUser}}</th>
						<th id="articulo">{{nombre}}</th>
						<th><a href="/editar/{{idUser}}" class="btn-ed">Editar</a></th>
						<th><a href="/elimina/{{idUser}}" class="btn-ba">Baja</a></th>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>