<script src="/src/public/js/script"></script>
<script src="/js/validacion.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="/js/cambiarColor.js"></script>


<body class="background">

    <!-- LOGIN -->
    <div class="container w-50 pb-5 mb-5">
        <div class="row">

            <div class="col">
                <img src="./images/logo.jpg" alt="" class="rounded mx-auto d-block px-10 pb-3 pt-3" style="margin-left: 25px; width: 150px;">
                <h1 class="fw-bold text-center mb-5" style="align-items: center;"> ¡Hola de nuevo! </h1>

                <!-- Formulario de login -->
                <form class="form" action="/entrar" method="post">


                    <div class="mb-4 px-3">
                        <label for="email" class="form-label"> email </label>
                        <input requiered type="email" name="email" class="form-control" minlength="5" maxlength="50">
                    </div>

                    {{#if emailErrors}}
                    <p class="submitError">{{emailErrors}}</p>
                    {{/if}}


                    <div class="mb-4 px-3">
                        <label for="password" class="form-label"> contraseña </label>
                        <input requiered type="password" name="password" class="form-control" minlength="8"
                            maxlength="25">
                    </div>

                    {{#if passwordErrors}}
                    <p class="submitError">{{passwordErrors}}</p>
                    {{/if}}

                    <div class="d-grid px-3" style="line-height: inherit;">
                        <button type="submit" class="btn submitButton"> iniciar sesión </button>
                    </div>


                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>