<script src="/src/public/js/script"></script>
<script src="/js/validacion.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="/js/cambiarColor.js"></script>

<body class="background">

    <!-- REGISTRO -->
    <div class="container w-50 px-5 pb-5 mb-5">
        <div class="row">
            <div class="col">
                <h1 class="fw-bold text-center pt-5 mb-5"> ¡Te damos la bienvenida! </h1>
                <form class="form px-4" action="/registra" method="post" onsubmit="return validar ();">


                    <div class="mb-4">
                        <label for="apPaterno" class="form-label"> Apellido paterno </label>
                        <input requiered type="text" id="apPaterno" name="apPaterno" class="form-control"
                            pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="4" maxlength="40">
                    </div>

                    <div class="mb-4">
                        <label for="apMaterno" class="form-label"> Apellido materno </label>
                        <input requiered type="text" id="apMaterno" name="apMaterno" class="form-control"
                            pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="4" maxlength="40">
                    </div>

                    <div class="mb-4">
                        <label for="nombre" class="form-label"> Nombre </label>
                        <input requiered type="text" id="nombre" name="nombre" class="form-control"
                            pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="3" maxlength="30">
                    </div>

                    <div class="mb-4">
                        <label for="fechaNacimiento" class="form-label"> Fecha de nacimiento </label>
                        <input class="form-control text-bg-light" min="1960-12-31" max="2010-12-31" type="text"
                            name="fechaNacimiento" placeholder="" onclick="ocultarError();" onfocus="(this.type='date')"
                            onblur="(this.type='text')">
                    </div>

                    <div class="mb-4">
                        <label for="telefono" class="form-label"> Número de teléfono </label>
                        <input requiered type="tel" id="tel" name="telefono" class="form-control" minlength="10"
                            maxlength="10">
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label"> Email </label>
                        <input requiered type="email" id="email" name="email" class="form-control" minlength="1"
                            maxlength="50">
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label"> Contraseña </label>
                        <input requiered type="password" id="password" name="password" class="form-control"
                            minlength="8" maxlength="25">
                    </div>

                    <input type="hidden" name="rol" value="n">



                    {{#if error}}
                        <p class="submitError">{{error}}</p>
                    {{/if}}

                    <div class="d-grid">
                        <button type="submit" class="btn submitButton"> Crear cuenta </button>
                    </div>


                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


</body>